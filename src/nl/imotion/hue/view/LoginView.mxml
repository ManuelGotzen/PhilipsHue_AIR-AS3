    <fx:Script><![CDATA[
        import nl.imotion.hue.vo.VOLogin;


        [Bindable]
        private var _loginData:VOLogin;


        private function onDiscoverClick():void
        {

        }


        private function onRegisterClick():void
        {

        }


        private function connect():void
        {

        }


        private function init():void
        {
            _loginData = new VOLogin();
            _loginData.ipAddress = "192.168.1.10";
            _loginData.userName = "c7a514b2b5a681399ecfb86e1265c49c";
            _loginData.deviceType = "";
